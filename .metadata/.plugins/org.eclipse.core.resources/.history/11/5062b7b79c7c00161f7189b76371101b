package exercise86ManagementProduct;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.sql.SQLException;

public class MainClass {
	private static BufferedReader input = new BufferedReader(
			new InputStreamReader(System.in));
	private static CategoryConroller categoryConroller = new CategoryConroller();
	private static Product product = new Product();
	private static ProductController productController = new ProductController();

	public static void main(String[] args) throws IOException,
			ClassNotFoundException, SQLException {

		boolean flag = true;
		while (flag) {
			System.out.println("=====Welcom to Store======");
			System.out
					.println("Select Menu: \n\t1) View Category \n\t2) View product \n\t3) Add New Produc \n\t4 Search Product \n\t5) Update Product \n\t6)Exit ");
			int number = Integer.parseInt(input.readLine());
			switch (number) {
			case 1:
				System.out.println(categoryConroller.toString());
				break;
			case 2:

				System.out.println(productController.toString());

				break;
			case 3:
				addNewProduct();
				break;
			case 4:
				searchProduct();
				break;
			case 5:
				updateProduct();
				break;
			case 6:
				System.out.println("Done!");
				flag = false;
				break;
			default:
				System.out.println("Select wrong !");
				if (selectYN())
					continue;
				else
					flag = false;
				break;
			}
		}

	}

	public static void addNewProduct() throws IOException,
			ClassNotFoundException, SQLException {

		categoryConroller.getAllCategory();
		System.out.println(categoryConroller.toString());

		System.out.println("Select categary: ");
		int categaryid = Integer.parseInt(input.readLine());

		System.out.println("=====Add new product=====");
		System.out.println("Enter name: ");
		String name = input.readLine();

		System.out.println("Enter price: ");
		double price = Double.parseDouble(input.readLine());

		System.out.println("Enter amount: ");
		int amount = Integer.parseInt(input.readLine());

		product = new Product(name, price, amount, categaryid);

		productController.allNewProduct(product);
		System.out.println(productController.toString());

	}

	public static void searchProduct() throws IOException,
			ClassNotFoundException, SQLException {
		System.out.println("===========Serach=============");
		System.out.println("Enter name to search: ");
		String name = input.readLine();
		if (productController.toStringSearch(name) == null) {
			System.out.println(name + " is not find");
		} else
			System.out.println(productController.toStringSearch(name));
	}

	public static void updateProduct() throws NumberFormatException,
			IOException, ClassNotFoundException, SQLException {
		System.out.println("=====Update Product============");

		System.out.println("Enter No.: ");
		int id = Integer.parseInt(input.readLine());

		System.out.println("Enter price: ");
		double price = Double.parseDouble(input.readLine());

		System.out.println("Enter amount: ");
		int amount = Integer.parseInt(input.readLine());

		product = new Product(price, amount);

		if (productController.toStringUpdate(id, product) == null) {
			System.out.println(id + " is not find");
		} else
			System.out.println(productController.toStringUpdate(id, product));

	}

	public static boolean selectYN() throws IOException {
		BufferedReader input = new BufferedReader(new InputStreamReader(
				System.in));
		System.out.println("Do you want to continue");
		String st = input.readLine();
		boolean flag = false;
		while (!flag) {
			switch (st) {
			case "N":
			case "NO":
			case "no":
			case "n":
				return false;

			case "Y":
			case "YES":
			case "yes":
			case "y":
				return true;
			default:
				System.out.println("Choose again!");
				st = input.readLine();
				break;
			}

		}

		return false;
	}
}
